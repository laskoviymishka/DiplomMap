@using Investmogilev.Infrastructure.Common.Model.Project
@model Investmogilev.Infrastructure.Common.Model.Project.Project
    @if (User.IsInRole("Admin"))
    {
        
@Html.ActionLink("asd", "AddInvolvedOrganizations", new { projectId = Model.Id }, new { @class = "icon-arrow-left-3 fg-darker big button primary" })

        <div class="listview small">
            @foreach (var task in Model.Tasks.Where(t => t.Type == TaskTypes.InvolvedOrganiztion))
            {
                if (task.IsComplete)
                {
                    <a href="/AdminActions/Details?taskId=@task.Id&projectId=@task.ProjectId" class="list selected">
                        <div class="list-content">
                            <img src="/images/word.png" class="icon">
                            <div class="data">
                                <span class="list-title">@task.Title</span>
                                <span class="list-remark">@task.Body</span>
                            </div>
                        </div>
                    </a>
                }
                else
                {
                    <a href="/AdminActions/Details?taskId=@task.Id&projectId=@task.ProjectId" class="list">
                        <div class="list-content">
                            <img src="/images/word.png" class="icon">
                            <div class="data">
                                <span class="list-title">@task.Title</span>
                                <span class="list-remark">@task.Body</span>
                            </div>
                        </div>
                    </a>
                }
            }
        </div>

    }
    else
    {
        <div class="listview small">
            @foreach (var task in Model.Tasks.Where(t => t.Type == TaskTypes.InvolvedOrganiztion))
            {
                if (task.IsComplete)
                {
                    <a href="#" class="list selected">
                        <div class="list-content">
                            <img src="/images/word.png" class="icon">
                            <div class="data">
                                <span class="list-title">@task.Title</span>
                                <span class="list-remark">@task.Body</span>
                            </div>
                        </div>
                    </a>
                }
                else
                {
                    <a href="#" class="list">
                        <div class="list-content">
                            <img src="/images/word.png" class="icon">
                            <div class="data">
                                <span class="list-title">@task.Title</span>
                                <span class="list-remark">@task.Body</span>
                            </div>
                        </div>
                    </a>
                }
            }
        </div>
    }
    @{Html.RenderPartial("AllowActions");}