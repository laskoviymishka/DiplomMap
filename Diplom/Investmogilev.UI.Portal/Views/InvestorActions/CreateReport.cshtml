@model Investmogilev.Infrastructure.Common.Model.Project.Report
@{
    ViewBag.Title = "Создание отчета";
}
<h2>
    Создать отчет
</h2>
<div>
    @Html.ActionLink("К моим задачам", "Index", null, new { @class = "icon-arrow-left-3 fg-darker button success" })
    @Html.ActionLink("К проекту", "Project", "BaseProject", new { @id = Model.ProjectId }, new { @class = "icon-arrow-down-3 fg-darker button success", style = "width:120px" })
</div>

<script src="/Scripts/2013.2.611/telerik.common.min.js"></script>
<script src="/Scripts/2013.2.611/telerik.upload.min.js"></script>
<link href="/Content/Style.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Отчет</legend>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.TaskId)
        @Html.HiddenFor(model => model.ProjectId)
        @Html.HiddenFor(model => model.ReportTime)
        <small class="editor-label">
            @Html.LabelFor(model => model.Body)
        </small>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Body, new { @id = "editor" })
            @Html.ValidationMessageFor(model => model.Body)
        </div>
        <small class="editor-label">
            Приложения
        </small>
        <div style="margin:10px">
            @Html.Telerik().Upload().Name("attachments").Multiple(false).Async(async => async.Save("Save", "InvestorActions", new { taskId = Model.TaskId, reportId = Model.Id }).Remove("Remove", "InvestorActions", new { taskId = Model.TaskId, reportId = Model.Id }).AutoUpload(false)).Localizable("ru-RU")
        </div>
        <p>
            <input type="submit" value="Отправить" />
        </p>
    </fieldset>
}

<script>
    $(document).ready(function () { $("#editor").cleditor(); });
</script>
<script type="text/javascript">
    //<![CDATA[
    jQuery(document).ready(function () {
        if (!jQuery.telerik) jQuery.telerik = {};
        jQuery('#attachments').tUpload({
            async: {
                "saveUrl": "/Report/Save?taskId=@Model.TaskId&reportId=@Model.Id&projectId=@Model.ProjectId",
                "autoUpload": false
            }, localization: {
                "cancel": "Отмена",
                "retry": "Повторить",
                "select": "Выбрать...",
                "remove": "Удалить",
                "uploadSelectedFiles": "Загрузить файлы",
                "dropFilesHere": "перетащите сюда файлы для загрузки",
                "statusFailed": "неудачно",
                "statusUploaded": "загружено",
                "statusUploading": "загружается"
            }
        });
    });
    //]]>
</script>