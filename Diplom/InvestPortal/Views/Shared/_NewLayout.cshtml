<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/2013.2.611/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="~/Scripts/2013.2.611/telerik.common.min.js"></script>
    <script src="~/Scripts/2013.2.611/telerik.upload.min.js"></script>
    <link href="~/Content/Style.css" rel="stylesheet" />
    <script src="~/Scripts/metro-ui/jquery.ui.widget.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-treeview.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-calendar.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-core.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-date-format.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-datepicker.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-dialog.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-dropdown.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-hint.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-input-control.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-listview.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-live-tile.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-notify.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-plugin-template.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-progressbar.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-stepper.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-tab-control.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-table.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-times.js" type="text/javascript"></script>
    <script src="~/Scripts/metro-ui/metro-touch-handler.js" type="text/javascript"></script>
    <link href="~/Content/metro-ui/css/metro-bootstrap-responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metro-ui/css/metro-bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery.cleditor.min.js"></script>
    <link href="~/Content/jquery.cleditor.css" rel="stylesheet" />
    <script src="~/Scripts/gmaps.js"></script>
    <body class="metro">
        <div class="grid">
            <nav class="navigation-bar bd-lightBlue">
                <nav class="navigation-bar-content">
                    <div class="element">
                        <a class="dropdown-toggle" href="#">Инвестиционный портал могилева</a>
                        <ul class="dropdown-menu" data-role="dropdown">
                            <li><a href="/Home">Главная</a></li>
                            <li><a href="/Home/About">О проекте</a></li>
                            <li class="divider"></li>
                            <li><a href="http://tserakhau.cloudapp.net/map/index.html">Инвестиционная карта</a></li>
                        </ul>
                    </div>
                    <div class="element input-element">
                        <form>
                            <div class="input-control text">
                                <input type="text" placeholder="Поиск проектов...">
                                <button class="btn-search"></button>
                            </div>
                        </form>
                    </div>

                    <div class="element place-right">
                        <a class="dropdown-toggle" href="#">
                            <span class="icon-cog"></span>
                        </a>
                        <ul class="dropdown-menu place-right" data-role="dropdown">
                            <li><a href="/account/logoff">Выйти</a></li>
                        </ul>
                    </div>
                    <span class="element-divider place-right"></span>
                    <button class="element image-button image-left place-right">
                        @User.Identity.Name
                    </button>
                </nav>
            </nav>
            <div class="row">
                <div style="width: 20%; float: left; margin-left: 20px; min-width: 220px">
                    @{Html.RenderAction("MenuPartial", "Profile");}
                </div>
                <div style="width: 70%; float: left; margin-left: 20px">
                    @RenderBody()
                </div>
            </div>
        </div>
    </body>
</html>
