@model Invest.Common.Model.Project.UnUsedBuilding

<fieldset>
    <legend>Неиспользуемое здание</legend>
    <table class="table table-striped table-condensed">
        <tr>
            <td>Название проекта</td>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>Описание проекта</td>
            <td>@Html.Raw(HttpUtility.HtmlDecode(Model.Description))</td>
        </tr>
        <tr>
            <td>Продажа</td>
            <td>@Html.DisplayFor(model => model.IsSell)</td>
        </tr>
        <tr>
            <td>Коммуникации</td>
            <td>@Html.DisplayFor(model => model.IsCommunicate)</td>
        </tr>
        <tr>
            <td>Балансовая стоимость</td>
            <td>@Html.DisplayFor(model => model.BalancePrice) млрд. руб.</td>
        </tr>

    </table>
    <a id="popupLink" href="/InvestorEntry/ResponseToProject/@Model._id" class="button button info">Откликнуться на проект</a>

</fieldset>

