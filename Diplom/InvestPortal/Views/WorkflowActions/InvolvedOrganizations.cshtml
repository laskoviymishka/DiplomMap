@using Invest.Common.Model.Project
@using Invest.Common.State
@model Project

@if (User.IsInRole("Admin"))
{
    <div class="listview small">
        @foreach (var task in Model.Tasks.Where(t => t.Type == TaskTypes.InvolvedOrganiztion))
        {
            if (task.TaskReport != null)
            {
                <a href="/ReportReview/InvolvedReport?taskId=@task._id&projectId=@task.ProjectId" class="list selected">
                    <div class="list-content">
                        <img src="/images/word.png" class="icon">
                        <div class="data">
                            <span class="list-title">@task.Title</span>
                            <span class="list-remark">@task.Body</span>
                        </div>
                    </div>
                </a>
            }
            else
            {
                <a href="/ReportReview/InvolvedReport?taskId=@task._id&projectId=@task.ProjectId" class="list">
                    <div class="list-content">
                        <img src="/images/word.png" class="icon">
                        <div class="data">
                            <span class="list-title">@task.Title</span>
                            <span class="list-remark">@task.Body</span>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
    <div>
        <ul>
            @foreach (ProjectWorkflow.Trigger trigger in ViewBag.AvaibleTriggers)
            {
                <li>@Html.ActionLink(trigger.ToString(), "Triggers", new { projectId = Model._id, @trigger = trigger.ToString() }, new { @class = "button primary" })</li>
            }
        </ul>
    </div>
}

@if (User.IsInRole("Investor"))
{
    <div class="listview small">
        @foreach (var task in Model.Tasks.Where(t => t.Step == ProjectWorkflow.State.DocumentSending))
        {
            if (task.IsComplete)
            {
                <a href="#" class="list selected">
                    <div class="list-content">
                        <img src="/images/word.png" class="icon">
                        <div class="data">
                            <span class="list-title">@task.Title</span>
                            <span class="list-remark">@task.Body</span>
                        </div>
                    </div>
                </a>
            }
            else
            {
                <a href="#" class="list">
                    <div class="list-content">
                        <img src="/images/word.png" class="icon">
                        <div class="data">
                            <span class="list-title">@task.Title</span>
                            <span class="list-remark">@task.Body</span>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
}