@if (!User.Identity.IsAuthenticated)
{
    @Html.ActionLink("Войдите на сайт", "Login", "Account")
    <br />
    @Html.ActionLink("Зарегестрируйтес на сайт", "Register", "Account")
}
else
{
    <p>Привет @User.Identity.Name !</p>
    @Html.ActionLink("Пока " + User.Identity.Name, "LogOff", "Account")
} 
