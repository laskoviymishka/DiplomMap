@model AdminPanelUI.Models.EditParametrViewModel
@{
    var guid = new Guid();
    }
<p>@Model.ParametrName</p>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = guid.ToString() }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ParametrName)
    @Html.HiddenFor(model => model.RegionId)
    <fieldset>
        <table class="table table-striped table-condensed">
            <tr>
                <th>Год
                </th>
                <th>Значение
                </th>
            </tr>

            @for (int i = 0; i < Model.Values.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(asd => Model.Values[i].Key)
                        @Html.DisplayFor(modelItem => Model.Values[i].Key)
                    </td>

                    <td>
                        @Html.EditorFor(modelItem => Model.Values[i].Value)
                    </td>
                </tr>
            }
        </table>
        <p>
            <input type="submit" value="Save" style="visibility:hidden"/>
            <button class="btn" onclick="post()">Сохранить</button>
        </p>
    </fieldset>
}
<script type="text/javascript">
    post = function () {
        var id = '#' + @guid.ToString()
        $(id).submit(function (event) {
            var form = $(this),
            url = form.attr('action');
            $.post(url);
        });
    }
</script>