@model IEnumerable<Investmogilev.Infrastructure.Common.Model.Project.ProjectNotes>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<table class="table hovered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteBody)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CretorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedTime)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoteTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoteBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CretorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new {id = item._id}) |
                @Html.ActionLink("Подробнее", "Details", new {id = item._id}) |
                @Html.ActionLink("Удалить", "Delete", new {id = item._id})
            </td>
        </tr>
    }
</table>