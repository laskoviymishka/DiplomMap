<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/2013.2.611/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/2013.2.611/telerik.datepicker.min.js" type="text/javascript"></script>
    <script src="../../Scripts/2013.2.611/telerik.datetimepicker.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="~/Scripts/gmaps.js"></script>
    @(Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.metro.css").Combined(true).Compress(true).UseTelerikContentDeliveryNetwork(false)))</head>
<body>
    <div class="page" style="width: 95%">
        <header>
			<div id="title">
				<h1>Инвестиционный портал могилева</h1>
			</div>
		</header>
        <section style="height: 85%">
            @Html.Telerik().Splitter().Name("Splitter0").HtmlAttributes(new { style = "height: 100%;" }).Orientation(SplitterOrientation.Vertical).Panes(vPanes => vPanes.Add()
                                .Size("100%")
                                .Collapsible(false)
                                .Content(Html.Telerik().Splitter().Name("Splitter1").Panes(panes =>
                                    {
                                        panes.Add()
                                            .Size("250px")
                                            .MinSize("250px")
                                            .MaxSize("300px")
                                            .Collapsible(true)
                                            .LoadContentFrom("ProfilePartial", "Profile");
                                        panes.Add()
                                            .Content(RenderBody().ToHtmlString());
                                    }).HtmlAttributes(new { @style = "height:99%" }).ToHtmlString()))
        </section>
        <footer>
		</footer>
    </div>
    @(Html.Telerik().ScriptRegistrar().Globalization(true).DefaultGroup(group => group.Combined(true).Compress(true).UseTelerikContentDeliveryNetwork(false)))
    <script src="../../Scripts/2013.2.611/telerik.window.min.js" type="text/javascript"></script>
    </body>
</html>
